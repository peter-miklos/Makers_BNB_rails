<h3>Log in</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <label for="email" class="mdl-textfield__label"><%= f.label :email %></label>
      <%= f.email_field(:email, class: "mdl-textfield__input", autofocus: true) %>
    </div>
  </div>

  <div class="field">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <label for="password" class="mdl-textfield__label"><%= f.label :password %></label>
      <%= f.password_field(:password, class: "mdl-textfield__input", autocomplete: "off") %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="remember_me">
        <%= f.check_box :remember_me, class: "mdl-checkbox__input" %>
        <%= f.label :remember_me, class: "mdl-checkbox__label" %>
      </label>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
